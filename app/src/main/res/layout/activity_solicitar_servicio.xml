<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#F5F5F5">

        <!-- Header con fondo blanco -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Botón menú hamburguesa -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menú"
                    android:padding="12dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#111827"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Título "Solicitar servicio" -->
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/inter_extrabold"
                    android:text="Solicitar servicio"
                    android:textColor="#111827"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/btnMenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnMenu"
                    app:layout_constraintTop_toTopOf="@id/btnMenu" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    <!-- ScrollView con el contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Contenedor blanco con el formulario -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvFormulario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Campo Seleccione el servicio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Seleccione el servicio"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#E5E7EB"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/spinnerServicio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:spinnerMode="dropdown" />

                    </androidx.cardview.widget.CardView>

                    <!-- Campo Detalles -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Detalles"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#E5E7EB"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etDetalles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/inter_extralight_italic"
                            android:gravity="top|start"
                            android:hint="Por favor redacte el tipo del servicio"
                            android:inputType="textMultiLine"
                            android:padding="16dp"
                            android:textColor="#111827"
                            android:textColorHint="#111827"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Campo Fecha -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Fecha"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#E5E7EB"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etFecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:focusable="false"
                            android:fontFamily="@font/inter_extralight_italic"
                            android:hint="00/00/0000"
                            android:inputType="none"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#111827"
                            android:textColorHint="#111827"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Campo Hora de inicio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Hora de inicio"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#E5E7EB"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etHora"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:focusable="false"
                            android:fontFamily="@font/inter_extralight_italic"
                            android:hint="00:00:00"
                            android:inputType="none"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#111827"
                            android:textColorHint="#111827"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Contenedor de botones DENTRO del contenedor blanco -->
                    <LinearLayout
                        android:id="@+id/llBotones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Botón Guardar con degradado verde -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnGuardar"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_verde_desbanecido"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="25dp"
                                android:paddingEnd="25dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_regular"
                                    android:text="Guardar"
                                    android:textColor="#F8FAFC"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Botón Cancelar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnCancelar"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="#9CA3AF"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingStart="25dp"
                                android:paddingEnd="25dp"
                                android:text="Cancelar"
                                android:textColor="#F8FAFC"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/nav_drawer_content" />

</androidx.drawerlayout.widget.DrawerLayout>