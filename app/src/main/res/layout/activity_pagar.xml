<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header con fondo blanco -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Botón menú hamburguesa -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menú"
                android:padding="12dp"
                android:src="@drawable/ic_menu"
                android:tint="#111827"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título "Pagos y servicios" -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="Pagos y servicios"
                android:textColor="#111827"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/btnMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnMenu"
                app:layout_constraintTop_toTopOf="@id/btnMenu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- ScrollView con el contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card Pagos de viviendas -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvPagosViviendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título "Pagos de viviendas" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:text="Pagos de viviendas"
                        android:textColor="#111827"
                        android:textSize="18sp" />

                    <!-- Este mes -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Este mes: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Adeudos -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Adeudos: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Total a pagar -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Total a pagar: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Contenedor de botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Botón Confirmar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnConfirmarViviendas"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="#047857"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:text="Confirmar"
                                android:textColor="#F8FAFC"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <!-- Botón Abonar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnAbonarViviendas"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="#10B981"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:text="Abonar"
                                android:textColor="#F8FAFC"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card Pagos de servicios -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvPagosServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título "Pagos de servicios" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:text="Pagos de servicios"
                        android:textColor="#111827"
                        android:textSize="18sp" />

                    <!-- Este mes -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Este mes: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Adeudos -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Adeudos: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Total a pagar -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_light_italic"
                        android:gravity="center"
                        android:text="Total a pagar: $00.00"
                        android:textColor="#111827"
                        android:textSize="14sp" />

                    <!-- Contenedor de botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Botón Confirmar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnConfirmarServicios"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="#047857"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:text="Confirmar"
                                android:textColor="#F8FAFC"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <!-- Botón Abonar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnAbonarServicios"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="#10B981"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:text="Abonar"
                                android:textColor="#F8FAFC"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>